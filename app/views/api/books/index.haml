.container
  %h1 读书
  %hr
  .container
    - @books.each_with_index do |book, index|
      - if index%6 == 0
        .row
      .col-md-2
        .thumbnail
          %a{:href => api_book_path(book)}
            %img{:alt => "Lights", :src => book.img, :style => "width:100%; height: 200px"}/
            .caption
              %p= book.name
              %p= book.author
