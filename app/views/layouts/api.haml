!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
      / The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "/favicon.ico", :rel => "icon"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title 读书分享平台
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => api_books_path, style: "text-decoration:none"} 读书分享平台
          .input-group.search
            %input.form-control#search-content{:placeholder => "输入书名", :type => "text"}
            %span.input-group-btn
              %button.btn.btn-default#search{:type => "button"} 搜索
          %a.navbar-brand{:href => logout_sessions_path, style: "text-decoration:none; margin-left: 900px"} 注销

    .container{style: "margin-top:50px;"}
      = yield

:css
  .navbar-header{
    position: relative;
  }
  .search {
    position: absolute;
    margin-top: 8px;
    width: 200px;
    left: 75%;
  }
:javascript
  $(document).ready(function(){
    $("#search").click(function(){
      var content = $('#search-content').val();
      window.location = "#{api_books_path}?content=" + content
    })
  })