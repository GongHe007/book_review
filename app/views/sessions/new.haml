.login-form
  .div.title 读书分享平台
  .div.title2 快来登录~
  = form_for :session, :html => {:class => 'form-horizontal', style: "margin-left:60px;"}, url: login_sessions_path, method: :post do |f|
    .form-group
      =f.label :username, '账号', class: 'col-sm-2 control-label'
      .col-sm-10
        =f.text_field :username, class: 'form-control'
    .form-group
      =f.label :password, '密码', class: 'col-sm-2 control-label'
      .col-sm-10
        =f.password_field :password, class: 'form-control'
    .form-group
      .col-sm-offset-1.col-sm-4
        %strong.error=@notice
    .form-group
      .col-sm-offset-1.col-sm-6
        = f.submit "登录", class: 'btn btn-primary'
      .col-sm-offset-6
        = link_to "注册", new_api_user_path, class: 'register', style: "color:#FFF;"

:css
  body {
    background-color: #eee;
  }
  .login-form {
    position:absolute;
    top:20%;
    left:35%;
    width: 400px;
    padding-bottom: 20px;
  }
  .title {
    width: 100%;
    text-align: center;
    height: 40px;
    line-height: 40px;
    margin-bottom: 21px;
    font-size: 20px;
  }
  .title2 {
    text-align: center;
    margin-bottom: 20px;
  }
  .error {
    color:red;
  }
  .register {
    color: #FFF;
    border-radius: 200px;
    display: inline-block;
    font-weight: bold;
    font-size: 1.0em;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    line-height: 12px;
    margin-right: 3px;
    padding: 7px 16px 6px;
    text-decoration: none;
    background-color: #838a90;
    background-image: linear-gradient(180deg, #838a90, #414549);
    text-shadow: #000 0 1px 0;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1), 0 1px 0 0px rgba(255, 255, 255, 0.2) inset;
    border: solid 1px #484e53;
    border-color: #484e53;
    border-top-color: #616a71;
    border-right-color: #484e53;
    border-bottom-color: #363b3f;
    border-left-color: #484e53;
    color: #efefef;
    cursor: pointer;
  }

  a, a:link {
    color: #FFF;
    text-decoration: none;
  }